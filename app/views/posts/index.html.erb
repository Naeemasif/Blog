<%= link_to 'Create New Post', new_post_path  %>

<% @posts.each do |post| %>
    <h1><%= post.title %></h1>


    <%= image_tag(post.picture_url, :width => 400, :height => 200 ) if post.picture.present? %>

    <p><%= post.text %></p>
    <%= link_to 'Back', posts_path  %> |
    <%= link_to 'Edit Post', edit_post_path(post)  %> |
    <%= link_to 'Show', post_path(post) %> |
    <td><%= link_to 'Destroy', post_path(post),method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <div class="post_comment">

  <span class="comment"><%= link_to "#{post.comments.size} comment"  %>

      </span>
    </div>
      <br><br>
  <% end %>



